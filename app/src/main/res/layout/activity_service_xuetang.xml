<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <include layout="@layout/include_service_top_with_time" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/shape_bg_white_10"
        android:orientation="vertical">

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/lc_service_xuetang"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginBottom="2dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/shape_green_8_8_circle"
                    android:drawablePadding="5dp"
                    android:includeFontPadding="false"
                    android:text="凌晨"
                    android:textColor="#68676F"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/shape_yellow_8_8_circle"
                    android:drawablePadding="5dp"
                    android:includeFontPadding="false"
                    android:text="早餐-后"
                    android:textColor="#68676F"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/shape_yellow_heavy_8_8_circle"
                    android:drawablePadding="5dp"
                    android:includeFontPadding="false"
                    android:text="凌晨"
                    android:textColor="#68676F"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/shape_blue_8_8_circle"
                    android:drawablePadding="5dp"
                    android:includeFontPadding="false"
                    android:text="早餐-空腹"
                    android:textColor="#68676F"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/shape_blue_heavy_8_8_circle"
                    android:drawablePadding="5dp"
                    android:includeFontPadding="false"
                    android:text="午餐-前"
                    android:textColor="#68676F"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/shape_purple_heavy_8_8_circle"
                    android:drawablePadding="5dp"
                    android:includeFontPadding="false"
                    android:text="晚餐-前"
                    android:textColor="#68676F"
                    android:textSize="12sp" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>