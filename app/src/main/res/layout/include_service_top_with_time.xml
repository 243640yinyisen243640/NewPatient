<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/text_white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="25dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_service_blood_data_back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:src="@drawable/base_top_back" />

            <TextView
                android:id="@+id/tv_service_blood_data_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:textColor="#242424"
                android:textSize="20sp" />


            <TextView
                android:id="@+id/tv_service_blood_data_more"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="血糖分析图"
                android:textColor="@color/main_base_color"
                android:textSize="17sp"
                android:visibility="gone" />


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/background" />

        <RadioGroup
            android:id="@+id/rg_service_blood_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@color/text_white"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_green_90_0_gray_white_90_0"
                android:baselineAligned="false"
                android:button="@null"
                android:checked="true"
                android:paddingStart="25dp"
                android:paddingTop="8dp"
                android:paddingEnd="25dp"
                android:paddingBottom="8dp"
                android:text="7天"
                android:textColor="@color/selector_black_24_white_ff" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_green_0_90_gray_white_0_90"
                android:button="@null"
                android:paddingStart="25dp"
                android:paddingTop="8dp"
                android:paddingEnd="25dp"
                android:paddingBottom="8dp"
                android:text="30天"
                android:textColor="@color/selector_black_24_white_ff" />

        </RadioGroup>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_service_blood_data_start_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/user_ill_time"
                    android:drawableRight="@drawable/arrow_down_black"
                    android:drawablePadding="5dp"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:text="选择开始时间"
                    android:textColor="@color/black_24"
                    android:textSize="14sp" />
            </LinearLayout>


            <View
                android:layout_width="0.5dp"
                android:layout_height="14dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_service_blood_data_end_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/user_ill_time"
                    android:drawableRight="@drawable/arrow_down_black"
                    android:drawablePadding="5dp"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:text="结束时间"
                    android:textColor="@color/black_24"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_service_blood_oxygen_all"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/shape_bg_white_10"
        android:orientation="horizontal"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_service_blood_oxygen_low"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:text="40%"
                android:textColor="@color/main_base_color"
                android:textSize="24sp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:includeFontPadding="false"
                android:text="7日血糖最低值"
                android:textColor="@color/black_24"
                android:textSize="13sp" />


        </LinearLayout>


        <View
            android:layout_width="0.5dp"
            android:layout_height="50dp"
            android:background="#EFEFEF" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_service_blood_oxygen_high"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:text="53%"
                android:textColor="@color/main_base_color"
                android:textSize="24sp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:includeFontPadding="false"
                android:text="7日血糖最高值"
                android:textColor="@color/black_24"
                android:textSize="13sp" />


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_service_pressure_all"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/shape_bg_white_10"
        android:orientation="horizontal"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_service_sys_pressure_low"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:text="5.6"
                android:textColor="#4B89F7"
                android:textSize="24sp" />

            <TextView
                style="@style/service_pressure_unit"
                android:text="mmHg" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:includeFontPadding="false"
                android:text="收缩压最低值"
                android:textColor="@color/black_24"
                android:textSize="13sp" />


        </LinearLayout>

        <View
            android:layout_width="0.5dp"
            android:layout_height="50dp"
            android:background="#EFEFEF" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_service_sys_pressure_high"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:text="5.6"
                android:textColor="#FF5750"
                android:textSize="24sp" />

            <TextView
                style="@style/service_pressure_unit"
                android:text="mmHg" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:includeFontPadding="false"
                android:text="收缩压最高值"
                android:textColor="@color/black_24"
                android:textSize="13sp" />


        </LinearLayout>

        <View
            android:layout_width="0.5dp"
            android:layout_height="50dp"
            android:background="#EFEFEF" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_service_dia_pressure_low"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:text="5.6"
                android:textColor="#4B89F7"
                android:textSize="24sp" />

            <TextView
                style="@style/service_pressure_unit"
                android:text="mmHg" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:includeFontPadding="false"
                android:text="舒张压最低值"
                android:textColor="@color/black_24"
                android:textSize="13sp" />


        </LinearLayout>

        <View
            android:layout_width="0.5dp"
            android:layout_height="50dp"
            android:background="#EFEFEF" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_service_dia_pressure_high"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:text="5.6"
                android:textColor="#FF5750"
                android:textSize="24sp" />

            <TextView
                style="@style/service_pressure_unit"
                android:text="mmHg" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:includeFontPadding="false"
                android:text="舒张压最高值"
                android:textColor="@color/black_24"
                android:textSize="13sp" />


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_service_bmi_all"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/shape_bg_white_10"
            android:orientation="horizontal"
            android:paddingTop="20dp"
            android:paddingBottom="20dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_service_bmi_low"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="16.0"
                    android:textColor="@color/main_base_color"
                    android:textSize="24sp" />


                <TextView
                    style="@style/service_pressure_unit"
                    android:text="最低值"
                    android:textSize="13sp" />


            </LinearLayout>


            <View
                android:layout_width="0.5dp"
                android:layout_height="50dp"
                android:background="#EFEFEF" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_service_bmi_high"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="20.0"
                    android:textColor="@color/main_base_color"
                    android:textSize="24sp" />


                <TextView
                    style="@style/service_pressure_unit"
                    android:text="平均值"
                    android:textSize="13sp" />


            </LinearLayout>


            <View
                android:layout_width="0.5dp"
                android:layout_height="50dp"
                android:background="#EFEFEF" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_service_bmi_aver"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="30.2"
                    android:textColor="@color/main_base_color"
                    android:textSize="24sp" />


                <TextView
                    style="@style/service_pressure_unit"
                    android:text="最高值"
                    android:textSize="13sp" />


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/shape_bg_white_10_10_0_0"
                android:orientation="horizontal"
                android:paddingTop="12dp"
                android:paddingBottom="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:paddingStart="30dp"
                    android:text="日期"
                    android:textColor="@color/gray_8a"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="身高"
                    android:textColor="@color/gray_8a"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="体重"
                    android:textColor="@color/gray_8a"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="BMI"
                    android:textColor="@color/gray_8a"
                    android:textSize="14sp" />

            </LinearLayout>

            <View
                style="@style/base_line"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp" />

        </LinearLayout>
    </LinearLayout>


</LinearLayout>