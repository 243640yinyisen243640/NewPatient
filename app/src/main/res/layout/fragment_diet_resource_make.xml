<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_bg_white_10"
            android:orientation="vertical"
            android:padding="15dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/diet_huacai_with_green_small"
                android:drawablePadding="5dp"
                android:text="食材清单"
                android:textColor="@color/black_2A"
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="材料"
                android:textColor="@color/gray_8a"
                android:textSize="14sp" />

            <com.vice.bloodpressure.view.NoScrollListView
                android:id="@+id/lv_diet_resource"
                style="@style/Base.ListView"
                android:layout_marginTop="5dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="调料"
                android:textColor="@color/gray_8a"
                android:textSize="14sp" />

            <com.vice.bloodpressure.view.NoScrollListView
                android:id="@+id/lv_diet_seasoning"
                style="@style/Base.ListView"
                android:layout_marginTop="5dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_bg_white_10"
            android:orientation="vertical"
            android:padding="15dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/diet_guo_with_green"
                android:drawablePadding="5dp"
                android:text="做法"
                android:textColor="@color/black_2A"
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_diet_make"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:textColor="@color/gray_8a"
                android:textSize="15sp" />

        </LinearLayout>


    </LinearLayout>


</ScrollView>