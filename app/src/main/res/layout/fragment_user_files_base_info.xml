<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="10dp"
        android:paddingEnd="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/shape_green_4_18_2"
            android:drawablePadding="7dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:text="基本信息"
            android:textColor="@color/black_24"
            android:textSize="17sp"
            android:textStyle="bold" />

        <View style="@style/base_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/user_file_left"
                android:text="姓名" />

            <TextView
                android:id="@+id/tv_user_base_info_name"
                style="@style/user_file_right"
                android:text="一条鱼" />
        </LinearLayout>

        <View style="@style/base_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/user_file_left"
                android:text="身份证号" />

            <TextView
                android:id="@+id/tv_user_base_info_id"
                style="@style/user_file_right"
                android:text="一条鱼" />
        </LinearLayout>

        <View style="@style/base_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/user_file_left"
                android:text="出生年月" />

            <TextView
                android:id="@+id/tv_user_base_info_born"
                style="@style/user_file_right"
                android:text="一条鱼" />
        </LinearLayout>

        <View style="@style/base_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/user_file_left"
                android:text="年龄" />

            <TextView
                android:id="@+id/tv_user_base_info_age"
                style="@style/user_file_right"
                android:text="一条鱼" />
        </LinearLayout>

        <View style="@style/base_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/user_file_left"
                android:text="性别" />

            <TextView
                android:id="@+id/tv_user_base_info_sex"
                style="@style/user_file_right"
                android:drawableRight="@drawable/arrow_right_gray"
                android:drawablePadding="10dp"
                android:text="请选择" />
        </LinearLayout>

        <View style="@style/base_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/user_file_left"
                android:text="籍贯" />

            <TextView
                android:id="@+id/tv_user_base_info_city"
                style="@style/user_file_right"
                android:drawableRight="@drawable/arrow_right_gray"
                android:drawablePadding="10dp"
                android:text="请选择" />
        </LinearLayout>

        <View style="@style/base_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/user_file_left"
                android:text="紧急联系人" />

            <TextView
                android:id="@+id/tv_user_base_info_sos_name"
                style="@style/user_file_right"
                android:drawableRight="@drawable/arrow_right_gray"
                android:drawablePadding="10dp"
                android:text="请输入名称" />
        </LinearLayout>

        <View style="@style/base_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/user_file_left"
                android:text="联系方式" />

            <TextView
                android:id="@+id/tv_user_base_info_sos_phone"
                style="@style/user_file_right"
                android:drawableRight="@drawable/arrow_right_gray"
                android:drawablePadding="10dp"
                android:text="请输入联系方式" />
        </LinearLayout>

        <View style="@style/base_line" />
    </LinearLayout>

</ScrollView>