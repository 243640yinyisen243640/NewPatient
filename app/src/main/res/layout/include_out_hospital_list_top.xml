<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/text_white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_activity_detail_top"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="25dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_out_hos_back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:src="@drawable/base_top_back" />

            <TextView
                android:id="@+id/tv_user_person_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="医院列表"
                android:textColor="#242424"
                android:textSize="20sp" />


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/gray_E5" />

        <EditText
            android:id="@+id/et_out_hos_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/shape_defaultbackground_90"
            android:drawableLeft="@drawable/search"
            android:drawablePadding="10dp"
            android:padding="10dp"
            android:textColor="@color/black_24"
            android:hint="请输入医院名称"
            android:textColorHint="@color/gray_8a"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_out_hos_province"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="15dp">

                <TextView
                    android:id="@+id/tv_out_hos_province"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:drawableRight="@drawable/arrow_down_gray_little"
                    android:drawablePadding="7dp"
                    android:text="请选择省份"
                    android:textColor="@color/black_24"
                    android:textSize="13sp" />
            </LinearLayout>


            <View
                android:layout_width="0.5dp"
                android:layout_height="14dp"
                android:background="#EFEFEF" />

            <LinearLayout
                android:id="@+id/ll_out_hos_city"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="15dp">

                <TextView
                    android:id="@+id/tv_out_hos_city"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:drawableRight="@drawable/arrow_down_gray_little"
                    android:drawablePadding="7dp"
                    android:text="请选择城市"
                    android:textColor="@color/black_24"
                    android:textSize="13sp" />
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>


</LinearLayout>