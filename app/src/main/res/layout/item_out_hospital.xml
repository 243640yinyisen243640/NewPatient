<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/ll_out_hos_click"
    android:background="@drawable/shape_bg_white_10"
    android:orientation="horizontal"
    android:padding="15dp">

    <ImageView
        android:id="@+id/iv_out_hos_img"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/out_hospital_default" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_out_hos_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:text="郑州大学第一附属医院"
            android:textColor="@color/black_24"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_out_hos_introduce"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:includeFontPadding="false"
            android:maxLines="2"
            android:text="郑州市第一人民医院(新乡医学院郑州第一附属医院)始建于1942年，是一所集医疗、教...、科研、预防、保健、康复为一体的综合性"
            android:textColor="@color/gray_8a"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_out_hos_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/location_gray"
            android:drawablePadding="5dp"
            android:ellipsize="end"
            android:includeFontPadding="false"
            android:maxLines="2"
            android:text="郑州市金水区东十里铺社区"
            android:textColor="#BBBBBB"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_out_hos_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_bg_white_green_90_1"
            android:paddingLeft="7dp"
            android:paddingTop="5dp"
            android:paddingRight="7dp"
            android:paddingBottom="5dp"
            android:text="三甲医院"
            android:textColor="@color/main_base_color"
            android:textSize="11sp" />


    </LinearLayout>

</LinearLayout>