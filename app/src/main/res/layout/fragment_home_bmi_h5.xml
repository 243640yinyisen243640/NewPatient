<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_warning_bmi_add_h5"
        style="@style/style_title_with_green_h"
        android:layout_height="wrap_content"
        android:drawableRight="@drawable/circle_add_white"
        android:gravity="left"
        android:paddingLeft="10dp"
        android:paddingTop="15dp"
        android:paddingRight="15dp"
        android:text="BMI" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.vice.bloodpressure.view.X5WebView
            android:id="@+id/web_warning_bmi_data"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="15dp"
            android:fadingEdge="none"
            android:overScrollMode="never"
            android:scrollbars="none" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_little_background_5"
            android:orientation="vertical"
            android:padding="12dp">

            <TextView
                android:id="@+id/tv_warning_bmi_num_state_h5"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawablePadding="9dp"
                android:includeFontPadding="false"
                android:textColor="@color/black_2A"
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_warning_bmi_time_h5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:textColor="@color/gray_9F"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>