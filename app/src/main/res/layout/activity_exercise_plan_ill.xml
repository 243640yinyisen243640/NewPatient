<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="100dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="@drawable/diet_programme_bg_head" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ProgressBar
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="0dp"
                    android:layout_height="6dp"
                    android:layout_marginStart="25dp"
                    android:layout_weight="1"
                    android:max="5"
                    android:progress="4"
                    android:progressDrawable="@drawable/diet_programme_progress_bar" />

                <TextView
                    android:id="@+id/tv_diet_programme_one_progress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="21dp"
                    android:background="@drawable/shape_bg_black_90_20"
                    android:paddingStart="15dp"
                    android:paddingTop="5dp"
                    android:paddingEnd="15dp"
                    android:paddingBottom="5dp"
                    android:text="4/5"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="55dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/shape_bg_white_10"
                android:orientation="vertical"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingBottom="45dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="30dp"
                        android:layout_height="1dp"
                        android:background="@color/main_base_color" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:text="既往病史及并发症"
                        android:textColor="@color/main_base_color"
                        android:textSize="13sp" />

                    <View
                        android:layout_width="30dp"
                        android:layout_height="1dp"
                        android:background="@color/main_base_color" />
                </LinearLayout>

                <RadioGroup
                    android:id="@+id/rg_exercise_ill_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:id="@+id/rb_exercise_ill_type1"
                        style="@style/exercise_ill_type_choose"
                        android:text="冠心病" />

                    <RadioButton
                        android:id="@+id/rb_exercise_ill_type2"
                        style="@style/exercise_ill_type_choose"
                        android:text="高血压" />

                    <RadioButton
                        android:id="@+id/rb_exercise_ill_type3"
                        style="@style/exercise_ill_type_choose"
                        android:text="合并神经病变" />

                    <RadioButton
                        android:id="@+id/rb_exercise_ill_type4"
                        style="@style/exercise_ill_type_choose"
                        android:text="合并视网膜病变" />

                    <RadioButton
                        android:id="@+id/rb_exercise_ill_type5"
                        style="@style/exercise_ill_type_choose"
                        android:text="合并肾病" />

                    <RadioButton
                        android:id="@+id/rb_exercise_ill_type6"
                        style="@style/exercise_ill_type_choose"
                        android:checked="true"
                        android:text="无" />
                </RadioGroup>

            </LinearLayout>

        </FrameLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_exercise_ill_back"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/shape_bg_white_90"
                android:gravity="center"
                android:padding="12dp"
                android:text="上一步"
                android:textColor="@color/main_base_color"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_exercise_ill_next"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:background="@drawable/shape_bg_white_90"
                android:gravity="center"
                android:padding="12dp"
                android:text="下一步"
                android:textColor="#00C27F"
                android:textSize="15sp" />

        </LinearLayout>
    </LinearLayout>


</ScrollView>