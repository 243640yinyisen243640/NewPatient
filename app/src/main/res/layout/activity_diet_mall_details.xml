<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_bg_white_10"
        android:orientation="vertical"
        android:paddingBottom="15dp">


        <TextView
            android:id="@+id/tv_diet_mall_details_title"
            style="@style/diet_change_diet_meal_title"
            android:drawableLeft="@drawable/diet_bing_with_green"
            android:drawableRight="@drawable/diet_change_my_like"
            android:drawablePadding="5dp"
            android:text="@string/diet_change_diet_top_breakfast" />

        <TextView style="@style/base_dotted_line" />

        <com.vice.bloodpressure.view.NoScrollListView
            android:id="@+id/rv_diet_mall_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@color/transparent"
            android:listSelector="@color/transparent" />


    </LinearLayout>

</LinearLayout>