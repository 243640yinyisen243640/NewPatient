<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ll_diet_plan_meal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_diet_plan_meal_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:text="主食"
            android:textColor="@color/black_2A"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_diet_plan_meal_color"
            android:layout_width="35dp"
            android:layout_height="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/shape_red_90" />

        <TextView
            android:id="@+id/tv_diet_plan_meal_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:text="3两"
            android:textColor="@color/gray_9E"
            android:textSize="13sp" />
    </LinearLayout>


</LinearLayout>