<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/anwser_begin_bg"
        android:orientation="vertical"
        android:paddingBottom="200dp">

        <ProgressBar
            android:id="@+id/pb_answer_exercise_time"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="25dp"
            android:layout_marginBottom="20dp"
            android:progressDrawable="@drawable/diet_programme_progress_bar" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/shape_bg_white_10"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingBottom="120dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:gravity="center"
                android:orientation="horizontal">

                <View
                    android:layout_width="18dp"
                    android:layout_height="1dp"
                    android:background="#9A9A9A" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:text="为制定符合自己的控制方案，请认真完成以下问题"
                    android:textColor="#9A9A9A"
                    android:textSize="12sp" />

                <View
                    android:layout_width="18dp"
                    android:layout_height="1dp"
                    android:background="#9A9A9A" />
            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="是否有空腹运动？ "
                android:textColor="@color/black_24"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ListView
                android:id="@+id/lv_answer_exercise_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:divider="@color/transparent"
                android:dividerHeight="10dp"
                android:listSelector="@color/transparent" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_background_5"
                android:orientation="vertical"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="运动时间："
                        android:textColor="@color/black_24"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/et_answer_exercise_time"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/transparent"
                        android:digits="1234567890."
                        android:gravity="center"
                        android:hint="请输入"
                        android:maxLines="1"
                        android:paddingTop="7dp"
                        android:paddingBottom="7dp"
                        android:textColor="@color/black_24"
                        android:textColorHint="@color/gray_8a"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="分钟/次"
                        android:textColor="@color/black_24"
                        android:textSize="15sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="运动频率："
                        android:textColor="@color/black_24"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/et_answer_exercise_rate"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/transparent"
                        android:digits="1234567890."
                        android:gravity="center"
                        android:hint="请输入"
                        android:maxLines="1"
                        android:paddingTop="7dp"
                        android:paddingBottom="7dp"
                        android:textColor="@color/black_24"
                        android:textColorHint="@color/gray_8a"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="&#12288;天/周"
                        android:textColor="@color/black_24"
                        android:textSize="15sp" />

                </LinearLayout>
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="47dp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tv_exercise_time_back"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:background="@drawable/shape_bg_white_green_90_1"
                android:gravity="center"
                android:text="上一题"
                android:textColor="#00C27F"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_exercise_time_next"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@drawable/shape_bg_main_gra_90"
                android:gravity="center"
                android:text="完成"
                android:textColor="@color/text_white"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>


</ScrollView>