<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:src="@drawable/add_equipment_introduce" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="230dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/shape_bg_white_10"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/user_add_left"
                    android:text="设备类型" />

                <TextView
                    android:id="@+id/tv_add_equipment_type"
                    style="@style/user_add_right_choose"
                    android:gravity="right|center"
                    android:text="血糖仪"
                    android:textColor="@color/black_24" />

            </LinearLayout>

            <View style="@style/line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/user_add_left"
                    android:text="品牌名称" />

                <EditText
                    android:id="@+id/et_add_equipment_name"
                    style="@style/user_add_right"
                    android:gravity="right|center"
                    android:hint="请输入品牌名称"
                    android:textColor="@color/black_24" />

            </LinearLayout>

            <View style="@style/line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/user_add_left"
                    android:text="设备号" />

                <EditText
                    android:id="@+id/et_add_equipment_num"
                    style="@style/user_add_right"
                    android:gravity="right|center"
                    android:hint="请输入设备号"
                    android:imeOptions="actionSearch"
                    android:inputType="phone"
                    android:lines="1"
                    android:textColor="@color/black_24" />

            </LinearLayout>

            <View style="@style/line" />
        </LinearLayout>

    </FrameLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:id="@+id/ll_add_equipment_sure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@drawable/shape_bg_white_10_10_0_0"
        android:padding="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_bg_main_gra_90"
            android:gravity="center"
            android:padding="13dp"
            android:text="保存"
            android:textColor="@color/text_white"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>