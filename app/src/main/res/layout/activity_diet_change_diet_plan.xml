<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_f3"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_bg_white_10"
        android:orientation="vertical"
        android:paddingBottom="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp">

            <TextView
                style="@style/style_title_with_green_h"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:text="@string/diet_change_diet_top_title" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_bg_background_10"
                android:orientation="vertical"
                android:paddingBottom="15dp">

                <TextView
                    android:id="@+id/tv_diet_change_breakfast"
                    style="@style/diet_change_diet_meal_title"
                    android:drawableRight="@drawable/arrow_right_gray"
                    android:text="@string/diet_change_diet_top_breakfast" />

                <TextView style="@style/base_dotted_line" />

                <com.vice.bloodpressure.view.NoScrollListView
                    android:id="@+id/nlv_diet_change_breakfast"
                    style="@style/Base.ListView"
                    android:background="@color/white_f3">

                </com.vice.bloodpressure.view.NoScrollListView>


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_bg_background_10"
                android:orientation="vertical"
                android:paddingBottom="15dp">

                <TextView
                    android:id="@+id/tv_diet_change_lunch"
                    style="@style/diet_change_diet_meal_title"
                    android:drawableRight="@drawable/arrow_right_gray"
                    android:text="@string/diet_change_diet_top_lunch" />

                <TextView style="@style/base_dotted_line" />

                <com.vice.bloodpressure.view.NoScrollListView
                    android:id="@+id/nlv_diet_change_lunch"
                    style="@style/Base.ListView"
                    android:background="@color/white_f3">

                </com.vice.bloodpressure.view.NoScrollListView>


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_bg_background_10"
                android:orientation="vertical"
                android:paddingBottom="15dp">

                <TextView
                    android:id="@+id/tv_diet_change_dinner"
                    style="@style/diet_change_diet_meal_title"
                    android:drawableRight="@drawable/arrow_right_gray"
                    android:text="@string/diet_change_diet_top_dinner" />

                <TextView style="@style/base_dotted_line" />

                <com.vice.bloodpressure.view.NoScrollListView
                    android:id="@+id/nlv_diet_change_dinner"
                    style="@style/Base.ListView"
                    android:background="@color/white_f3">

                </com.vice.bloodpressure.view.NoScrollListView>


            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


</ScrollView>