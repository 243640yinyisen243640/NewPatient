<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_main_have_answer_education"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/shape_bg_white_10"
        android:orientation="vertical"
        android:padding="10dp"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                style="@style/style_title_with_green_h"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="教育" />


            <TextView
                android:id="@+id/tv_education_about_you"
                style="@style/sure_green_13sp_p12"
                android:layout_marginRight="10dp"
                android:text="与您相关 " />

            <TextView
                android:id="@+id/tv_education_make_again"
                style="@style/sure_green_13sp_p12"
                android:text="重新制定" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="19dp"
            android:text="今日需要学习的课程"
            android:textColor="@color/black_2A"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_education_article_bg"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/diet_guogai_gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_education_article_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="这个是标题"
                    android:textColor="@color/black_2A"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_education_article_contain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:includeFontPadding="false"
                    android:text="不知道这个是什么"
                    android:textColor="#4A4A4A"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_education_article_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:includeFontPadding="false"
                    android:text="这个是内容"
                    android:maxLines="3"
                    android:ellipsize="end"
                    android:textColor="@color/gray_9F"
                    android:textSize="13sp" />
            </LinearLayout>


        </LinearLayout>

        <TextView
            android:id="@+id/tv_education_article_text_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:textColor="@color/black_2A"
            android:textSize="13sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_main_no_answer_education"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/shape_bg_white_10"
        android:orientation="vertical"
        android:paddingStart="10dp"
        android:paddingTop="15dp"
        android:paddingEnd="10dp"
        android:paddingBottom="15dp"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/style_title_with_green_h"
                android:text="教育"
                android:textSize="20sp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="快来学习专属您的学习计划"
                    android:textColor="@color/black_2A"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="13dp"
                    android:text="抱歉，小慧并没有发现与您相匹配的系列教育课程，可能存在问题和解决方法为： "
                    android:textColor="@color/gray_9F"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="15dp"
                            android:text="· 填写指标过少，请进一步丰富和人档案，以获得更有针对性的教育课程；"
                            android:textColor="@color/gray_9F"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="15dp"
                            android:text="· 填写指标过少，请进一步丰富和人档案，以获得更有针对性的教育课程；"
                            android:textColor="@color/gray_9F"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tv_main_no_answer_education"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:background="@drawable/shape_bg_main_gra_90"
                            android:drawableRight="@drawable/arrow_right_white_little"
                            android:drawablePadding="10dp"
                            android:paddingStart="12dp"
                            android:paddingTop="9dp"
                            android:paddingEnd="12dp"
                            android:paddingBottom="9dp"
                            android:text="快来开启"
                            android:textColor="@color/text_white"
                            android:textSize="13sp" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:src="@drawable/main_no_answer_education" />

                </LinearLayout>


            </LinearLayout>


        </LinearLayout>
    </LinearLayout>
</LinearLayout>