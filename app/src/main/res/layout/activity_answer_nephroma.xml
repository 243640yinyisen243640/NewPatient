<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/anwser_begin_bg"
    android:orientation="vertical">

    <ProgressBar
        android:id="@+id/pb_answer_nephroma"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="20dp"
        android:progressDrawable="@drawable/diet_programme_progress_bar" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/shape_bg_white_10"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:orientation="horizontal">

            <View
                android:layout_width="18dp"
                android:layout_height="1dp"
                android:background="#E9E9E9" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:text="为制定符合自己的控制方案，请认真完成以下问题"
                android:textColor="#9F9F9F"
                android:textSize="13sp" />

            <View
                android:layout_width="18dp"
                android:layout_height="1dp"
                android:background="#E9E9E9" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="17dp"
            android:text="您是否患有慢性肾病?"
            android:textColor="#242424"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/rg_answer_programme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:layout_marginBottom="100dp"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/rb_diet_programme_no"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:background="@drawable/selector_bg_diet_programme"
                android:button="@null"
                android:checked="true"
                android:gravity="center"
                android:text="无"
                android:textColor="@drawable/selector_color_diet_programme"
                android:textSize="14sp"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/rb_diet_paogramme_one"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:background="@drawable/selector_bg_diet_programme"
                android:button="@null"
                android:checked="false"
                android:gravity="center"
                android:text="I期"
                android:textColor="@drawable/selector_color_diet_programme"
                android:textSize="14sp" />

            <RadioButton
                android:id="@+id/rb_diet_paogramme_two"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:background="@drawable/selector_bg_diet_programme"
                android:button="@null"
                android:checked="false"
                android:gravity="center"
                android:text="II期"
                android:textColor="@drawable/selector_color_diet_programme"
                android:textSize="14sp" />

            <RadioButton
                android:id="@+id/rb_diet_paogramme_three"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:background="@drawable/selector_bg_diet_programme"
                android:button="@null"
                android:checked="false"
                android:gravity="center"
                android:text="III期"
                android:textColor="@drawable/selector_color_diet_programme"
                android:textSize="14sp" />

            <RadioButton
                android:id="@+id/rb_diet_paogramme_four"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:background="@drawable/selector_bg_diet_programme"
                android:button="@null"
                android:checked="false"
                android:gravity="center"
                android:text="IV期"
                android:textColor="@drawable/selector_color_diet_programme"
                android:textSize="14sp" />

        </RadioGroup>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_answer_nephroma_back"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/shape_bg_white_90"
            android:gravity="center"
            android:padding="12dp"
            android:text="上一题"
            android:textColor="@color/main_base_color"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_answer_nephroma_next"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_weight="1"
            android:background="@drawable/shape_bg_main_gra_90"
            android:gravity="center"
            android:padding="12dp"
            android:text="下一题"
            android:textColor="@color/text_white"
            android:textSize="15sp" />

    </LinearLayout>

</LinearLayout>