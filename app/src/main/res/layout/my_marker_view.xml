<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_bg_white_black_10_1"
        android:orientation="vertical"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/mv_data1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="122"
                android:textColor="#F45252"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/mv_data1_"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/mv_data2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="83"
                android:textColor="#458FE3"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/mv_data_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="5dp"
                android:text="mmHg"
                android:textColor="#2A2A2A"
                android:textSize="15sp" />


        </LinearLayout>

        <TextView
            android:id="@+id/mv_data_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2022-02-17 13:10"
            android:textColor="#9F9F9F"
            android:textSize="12sp" />

    </LinearLayout>


</LinearLayout>