<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/text_white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="25dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_service_blood_data_back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:src="@drawable/base_top_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="血糖数据"
                android:textColor="#242424"
                android:textSize="20sp" />


            <TextView
                android:id="@+id/tv_service_blood_data_more"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="血糖分析图"
                android:textColor="@color/main_base_color"
                android:textSize="17sp" />


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/gray_E5" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_service_blood_data_start_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/user_ill_time"
                    android:drawableRight="@drawable/arrow_down_black"
                    android:drawablePadding="5dp"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:text="选择开始时间"
                    android:textColor="@color/black_24"
                    android:textSize="14sp" />
            </LinearLayout>


            <View
                android:layout_width="0.5dp"
                android:layout_height="14dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_service_blood_data_end_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/user_ill_time"
                    android:drawableRight="@drawable/arrow_down_black"
                    android:drawablePadding="5dp"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:text="结束时间"
                    android:textColor="@color/black_24"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <RadioGroup
        android:id="@+id/rg_service_blood_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/text_white"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="10dp">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_green_90_0_gray_white_90_0"
            android:baselineAligned="false"
            android:button="@null"
            android:checked="true"
            android:paddingStart="25dp"
            android:paddingTop="8dp"
            android:paddingEnd="25dp"
            android:paddingBottom="8dp"
            android:text="7天"
            android:textColor="@color/selector_black_24_white_ff" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_green_0_90_gray_white_0_90"
            android:button="@null"
            android:paddingStart="25dp"
            android:paddingTop="8dp"
            android:paddingEnd="25dp"
            android:paddingBottom="8dp"
            android:text="30天"
            android:textColor="@color/selector_black_24_white_ff" />

    </RadioGroup>


    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/vp_service_blood_data"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</LinearLayout>