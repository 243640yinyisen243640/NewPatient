<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">


    <com.scwang.smart.refresh.layout.SmartRefreshLayout
        android:id="@+id/refreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <com.scwang.smart.refresh.header.ClassicsHeader
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_education"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:background="@color/background"
            android:overScrollMode="never"
            android:paddingStart="3dp"
            android:paddingEnd="3dp" />

        <com.scwang.smart.refresh.footer.ClassicsFooter
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srlClassicsSpinnerStyle="Translate" />
    </com.scwang.smart.refresh.layout.SmartRefreshLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nsv_present_nodate"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/text_white"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_no_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawableTop="@drawable/education_no_data_bg"
            android:drawablePadding="15dp"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/huahansoft_load_state_no_data"
            android:textColor="@color/gray_8a"
            android:textSize="16sp" />
    </androidx.core.widget.NestedScrollView>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nsv_present_reword"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        android:visibility="gone">

        <TextView
            style="@style/HuaHanSoft.Wrap"
            android:layout_gravity="center"
            android:drawablePadding="23dp"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="抱歉，没有找到相关课程"
            android:textColor="@color/gray_8a"
            android:textSize="13sp" />
    </androidx.core.widget.NestedScrollView>
</LinearLayout>