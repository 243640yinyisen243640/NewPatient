<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/shape_bg_white_10"
        android:orientation="vertical"
        android:paddingStart="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="药品名称"
                android:textColor="@color/black_24"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/et_service_medicine_remind_add_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_weight="1"
                android:background="@color/text_white"
                android:hint="请输入药品名称"
                android:maxLines="2"
                android:paddingTop="20dp"
                android:paddingEnd="15dp"
                android:paddingBottom="25dp"
                android:textColor="@color/black_24"
                android:textColorHint="@color/gray_8a"
                android:textSize="15sp" />

        </LinearLayout>

        <View style="@style/base_line" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingEnd="15dp">

            <TextView
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="药品规格"
                android:textColor="@color/black_24"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/et_service_medicine_remind_add_specs"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="25dp"
                android:layout_weight="1"
                android:background="@color/text_white"
                android:gravity="left"
                android:hint="请输入规格数量"
                android:inputType="number"
                android:maxLines="2"
                android:paddingTop="20dp"
                android:paddingBottom="25dp"
                android:textColor="@color/black_24"
                android:textColorHint="@color/gray_8a"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_service_medicine_remind_add_specs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="5dp"
                android:background="@drawable/shape_bg_white_black_90_1"
                android:drawableRight="@drawable/arrow_down_gray_little"
                android:drawablePadding="13dp"
                android:paddingStart="12dp"
                android:paddingTop="7dp"
                android:paddingEnd="12dp"
                android:paddingBottom="7dp"
                android:text="/盒"
                android:textColor="@color/black_24"
                android:textSize="15sp" />

        </LinearLayout>

        <View style="@style/base_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="药品数量"
                android:textColor="@color/black_24"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/et_service_medicine_remind_add_num"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_weight="1"
                android:background="@color/text_white"
                android:hint="请输入药品数量"
                android:maxLines="2"
                android:paddingTop="20dp"
                android:paddingEnd="15dp"
                android:paddingBottom="25dp"
                android:textColor="@color/black_24"
                android:textColorHint="@color/gray_8a"
                android:textSize="15sp" />

        </LinearLayout>

        <View style="@style/base_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="药品用法"
                android:textColor="@color/black_24"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_service_medicine_record_add_use"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="25dp"
                android:layout_weight="1"
                android:drawableRight="@drawable/arrow_right_gray"
                android:drawablePadding="10dp"
                android:gravity="center|left"
                android:hint="请选择"
                android:paddingTop="20dp"
                android:paddingEnd="15dp"
                android:paddingBottom="20dp"
                android:textColor="@color/black_24"
                android:textSize="15sp" />


        </LinearLayout>

        <View style="@style/base_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="服用次数(日)"
                android:textColor="@color/black_24"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/et_service_medicine_remind_add_times"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_weight="1"
                android:background="@color/text_white"
                android:hint="请输入服药次数"
                android:inputType="number"
                android:maxLines="1"
                android:paddingTop="20dp"
                android:paddingBottom="25dp"
                android:textColor="@color/black_24"
                android:textColorHint="@color/gray_8a"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:paddingEnd="15dp"
                android:text="次"
                android:textColor="@color/black_24"
                android:textSize="15sp" />

        </LinearLayout>

        <View style="@style/base_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingEnd="15dp">

            <TextView
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="用药剂量(次)"
                android:textColor="@color/black_24"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/et_service_medicine_remind_add_dosage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_weight="1"
                android:background="@color/text_white"
                android:hint="请输入服药剂量"
                android:inputType="numberDecimal"
                android:maxLines="1"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:textColor="@color/black_24"
                android:textColorHint="@color/gray_8a"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_service_medicine_remind_add_dosage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="5dp"
                android:background="@drawable/shape_bg_white_black_90_1"
                android:drawableRight="@drawable/arrow_down_gray_little"
                android:drawablePadding="13dp"
                android:paddingStart="12dp"
                android:paddingTop="7dp"
                android:paddingEnd="12dp"
                android:paddingBottom="7dp"
                android:text="mg"
                android:textColor="@color/black_24"
                android:textSize="15sp" />

        </LinearLayout>

        <View style="@style/base_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="创建提醒时间"
                android:textColor="@color/black_24"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_service_medicine_remind_add_time"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableRight="@drawable/arrow_right_gray"
                android:drawablePadding="10dp"
                android:gravity="center|right"
                android:hint="请选择"
                android:paddingTop="20dp"
                android:paddingEnd="15dp"
                android:paddingBottom="20dp"
                android:textColor="@color/black_24"
                android:textSize="15sp" />


        </LinearLayout>


    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:id="@+id/ll_service_medicine_remind_add_sure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@drawable/shape_bg_white_10_10_0_0"
        android:padding="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_bg_main_gra_90"
            android:gravity="center"
            android:padding="13dp"
            android:text="保存"
            android:textColor="@color/text_white"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>