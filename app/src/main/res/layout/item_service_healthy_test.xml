<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_bg_white_10"
    android:gravity="center"
    android:orientation="horizontal"
    android:paddingLeft="3dp"
    android:paddingTop="10dp"
    android:paddingRight="10dp"
    android:paddingBottom="3dp">

    <TextView
        android:id="@+id/tv_service_healthy_test_img"
        android:layout_width="66dp"
        android:layout_height="66dp"
        android:drawableLeft="@drawable/service_healthy_test_tang" />

    <TextView
        android:id="@+id/tv_service_healthy_test_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:text="@string/app_name"
        android:textColor="#555555"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_service_healthy_test_sure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_bg_main_gra_90"
        android:paddingStart="15dp"
        android:paddingTop="8dp"
        android:paddingEnd="15dp"
        android:paddingBottom="8dp"
        android:text="评测"
        android:textColor="@color/text_white"
        android:textSize="13sp" />

</LinearLayout>