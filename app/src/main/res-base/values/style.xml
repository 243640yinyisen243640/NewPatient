<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="img_seven_and_thirty_home">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom|right</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_marginRight">-4dp</item>
        <item name="android:layout_marginBottom">-4dp</item>
        <item name="android:visibility">visible</item>
    </style>

    <style name="hh_wr_wr">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="HuaHanSoft.Window.Fade.Anim" parent="HuaHanSoft">
        <item name="android:windowEnterAnimation">@anim/hhsoft_window_fade_in</item>
        <item name="android:windowExitAnimation">@anim/hhsoft_window_fade_out</item>
    </style>

    <style name="HuaHanSoft.Text.Title.Wrap.14" parent="HuaHanSoft.Wrap">
        <item name="android:textColor">@color/defaultBlackText</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="HuaHanSoft.Text.Title.Wrap.16" parent="HuaHanSoft.Wrap">
        <item name="android:textColor">@color/defaultBlackText</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="app_picture_style" parent="HHBaseStyle">
        <!--是否改变图片列表界面状态栏字体颜色为黑色-->
        <item name="picture.statusFontColor">false</item>
        <!--返回键图标-->
        <item name="picture.leftBack.icon">@drawable/base_top_back</item>
        <!--标题文字颜色-->
        <item name="picture.title.textColor">@color/text_white</item>
        <!--标题栏右边文字-->
        <item name="picture.right.textColor">@color/text_white</item>
        <!--图片列表预览文字颜色-->
        <item name="picture.preview.textColor">@color/picture_list_text_color</item>
        <!--图片列表底部背景色-->
        <item name="picture.bottom.bg">@color/defaultAlbumBottom</item>
        <!--图片列表勾选样式-->
        <item name="picture.checked.style">@drawable/picture_checkbox_selector</item>
        <!--预览界面返回箭头-->
        <item name="picture.preview.leftBack.icon">@drawable/picture_back</item>
        <!--预览界面标题文字颜色-->
        <item name="picture.ac_preview.title.textColor">@color/text_white</item>
        <!--预览界面已完成文字颜色-->
        <item name="picture.ac_preview.complete.textColor">@color/picture_preview_text_color</item>
        <!--预览界面标题栏背景色-->
        <item name="picture.ac_preview.title.bg">@color/gray_8a</item>
        <!--预览界面底部背景色-->
        <item name="picture.ac_preview.bottom.bg">@color/gray_8a</item>

        <!--标题下拉箭头-->
        <item name="picture.arrow_down.icon">@drawable/arrow_down</item>
        <!--标题上拉箭头-->
        <item name="picture.arrow_up.icon">@drawable/arrow_up</item>

        <!--开启图片列表勾选数字模式-->
        <item name="picture.style.checkNumMode">false</item>
        <!--选择图片样式0/9-->
        <item name="picture.style.numComplete">true</item>
        <!--图片列表已完成文字颜色-->
        <item name="picture.complete.textColor">@color/picture_list_text_color</item>
        <!--图片已选数量圆点背景色-->
        <item name="picture.num.style">@drawable/num_oval</item>
        <!--裁剪页面标题背景色-->
        <item name="picture.crop.toolbar.bg">@color/bar_grey</item>
        <!--裁剪页面状态栏颜色-->
        <item name="picture.crop.status.color">@color/bar_grey</item>
        <!--裁剪页面标题文字颜色-->
        <item name="picture.crop.title.color">@color/text_white</item>
        <!--相册文件夹列表选中图标-->
        <item name="picture.folder_checked_dot">@drawable/orange_oval</item>
    </style>

    <style name="MyCustomTabTextAppearance">
        <item name="android:textSize">17sp</item>
    </style>

    <style name="hh_progress_bar_circle">
        <item name="android:indeterminateDrawable">@drawable/hh_progress_bar</item>
        <item name="android:minWidth">56dp</item>
        <item name="android:minHeight">56dp</item>
        <item name="android:maxHeight">56dp</item>
        <item name="android:maxWidth">56dp</item>
    </style>
</resources>