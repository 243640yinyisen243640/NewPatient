<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/defaultWhite"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_oper_hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingStart="20dp"
        android:paddingTop="20dp"
        android:paddingEnd="20dp"
        android:text="@string/tip"
        android:textColor="@color/black_32"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_oper_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingStart="20dp"
        android:paddingTop="30dp"
        android:paddingEnd="20dp"
        android:paddingBottom="40dp"
        android:text="@string/app_name"
        android:textColor="@color/black_64"
        android:textSize="18sp" />

    <View style="@style/line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/tv_oper_cancel"
            style="@style/text_black_16_w_w_w"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/cancel" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/background" />

        <TextView
            android:id="@+id/tv_oper_sure"
            style="@style/text_black_16_w_w_w"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/sure"
            android:textColor="@color/main_base_color" />
    </LinearLayout>
</LinearLayout>